<h1>EDIT</h1>

<%= form_with model: @gossip do |form| %>
  <div class = "form-group">
    <label>Title</label>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class = "form-group">
    <label>Content</label>
    <%= form.text_area :content, class:"form-control" %>
  </div>
  <div class = "form-group">
    
    <button type="submit" class="btn btn-primary">Modifier le potin</button>
  </div>
<% end %>